    <descriptionHyperlinks>
      <HediffDef>BEWH_ServitorSkillLevelUpgrade</HediffDef>
    </descriptionHyperlinks>
    <jobString>Upgrading specialization software.</jobString>
    <workSkill>Crafting</workSkill>
    <skillRequirements>
      <Crafting>12</Crafting>
    </skillRequirements>
    <workAmount>100</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Cremate</effectWorking>
    <soundWorking>Recipe_Cremate</soundWorking>
    <recipeUsers>
      <li>BEWH_ServitorUpgrader</li>
    </recipeUsers>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>ComponentIndustrial</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Gold</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>ComponentSpacer</li>
          </thingDefs>
        </filter>
        <count>4</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>ComponentIndustrial</li>
        <li>Steel</li>
        <li>Gold</li>
        <li>ComponentSpacer</li>
      </thingDefs>
    </fixedIngredientFilter>
    <appliedOnFixedBodyParts>
      <li>Torso</li>
    </appliedOnFixedBodyParts>
    <addsHediff>BEWH_ServitorSkillLevelUpgrade</addsHediff>
  </RecipeDef>
  <!-- HediffDef -->
