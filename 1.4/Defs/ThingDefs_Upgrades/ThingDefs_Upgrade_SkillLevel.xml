    <stages>
      <li>
        <label>Tier I</label>
        <minSeverity>0</minSeverity>
      </li>
      <li>
        <label>Tier II</label>
        <minSeverity>1</minSeverity>
      </li>
      <li>
        <label>Tier III</label>
        <minSeverity>2</minSeverity>
      </li>
    </stages>
